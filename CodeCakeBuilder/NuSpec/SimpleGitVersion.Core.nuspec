<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata minClientVersion="2.8">
    <id>SimpleGitVersion.Core</id>
    <version>$version$</version>
    <title>SimpleGitVersion.Core</title>
    <authors>Invenietis</authors>
    <owners>Invenietis</owners>
    <licenseUrl>http://www.opensource.org/licenses/mit-license.php</licenseUrl>
    <projectUrl>https://github.com/SimpleGitVersion/SGV-Net</projectUrl>
    <iconUrl>https://raw.githubusercontent.com/SimpleGitVersion/SGV-Net/master/SimpleGitVersion.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <summary>
      Core implementation of 'Constrained Semantic Version' on Git ({{CSemVer}}).
    </summary>
    <description>
      Extracts RepositoryInfo from a git repository that describes possible CSemVer and/or actual CSemVer version to use based on repository tags and topology.
      This assembly is bundled into SimpleGitVersionTask MSBuild extension but can be used independently.
      Please see https://github.com/SimpleGitVersion/SGV-Net/wiki.
    </description>
    <language>en-US</language>
    <tags>Git, Tag, Versioning, NuGet, SemVer, CSemVer</tags>
    <developmentDependency>true</developmentDependency>
    <releaseNotes>https://github.com/SimpleGitVersion/SGV-Net/releases</releaseNotes>
    <dependencies>
      <dependency id="CSemVer" version="0.30.0-a00-00-develop-0002" />
    </dependencies>
  </metadata>
  <files>
    <file src="SimpleGitVersion.Core\bin\{{configuration}}\ILMerged\SimpleGitVersion.Core.dll" target="lib\net45" />
    <file src="SimpleGitVersion.Core\bin\{{configuration}}\ILMerged\SimpleGitVersion.Core.pdb" target="lib\net45" />
    <file src="SimpleGitVersion.Core\bin\{{configuration}}\SimpleGitVersion.Core.xml" target="lib\net45" />
    <file src="SimpleGitVersion.Core\bin\{{configuration}}\lib\win32\x64\*.dll" target="win32\x64" />
    <file src="SimpleGitVersion.Core\bin\{{configuration}}\lib\win32\x86\*.dll" target="win32\x86" />

    <file src="SimpleGitVersion.Core\NuGetAssets\SimpleGitVersion.Core.props" target="Build" />
    <file src="SimpleGitVersionTask\NuGetAssets\RepositoryInfo.xsd" target="RepositoryInfo.xsd" />
  </files>

</package>