<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata minClientVersion="2.8">
    <id>SimpleGitVersion.Cake</id>
    <version>$version$</version>
    <title>SimpleGitVersion.Cake</title>
    <authors>Invenietis</authors>
    <owners>Invenietis</owners>
    <licenseUrl>http://www.opensource.org/licenses/mit-license.php</licenseUrl>
    <projectUrl>https://github.com/SimpleGitVersion/SGV-Net</projectUrl>
    <iconUrl>https://raw.githubusercontent.com/SimpleGitVersion/SGV-Net/master/SimpleGitVersion.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <summary>
      Cake extension that enables Cake scripts to obtain the SimpleGitVersion.RepositoryInfo ({{CSemVer}}).
    </summary>
    <description>
      This is a simple relay to access SimpleGitVersion.Core.RepositoryInfo from Cake extension methods.
      Please see https://github.com/SimpleGitVersion/SGV-Net/wiki.
    </description>
    <language>en-US</language>
    <tags>Git, Tag, Versioning, NuGet, SemVer, CSemVer, Cake</tags>
    <developmentDependency>true</developmentDependency>
    <releaseNotes>https://github.com/SimpleGitVersion/SGV-Net/releases</releaseNotes>
    <dependencies>
      <dependency id="SimpleGitVersion.Core" version="$version$" />
      <dependency id="Cake.Core" version="0.20.0" />
      <dependency id="Cake.Common" version="0.20.0" />
    </dependencies>
  </metadata>
  <files>
    <file src="SimpleGitVersion.Cake\bin\{{configuration}}\SimpleGitVersion.Cake.dll" target="lib\net45" />
    <file src="SimpleGitVersion.Cake\bin\{{configuration}}\SimpleGitVersion.Cake.xml" target="lib\net45" />
  </files>

</package>
